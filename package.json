{
    "name": "vscode-quick-rspec",
    "displayName": "Quick RSpec",
    "description": "Switch ruby files and spec files with shortcut key",
    "version": "0.0.1",
    "publisher": "mallowlabs",
    "engines": {
        "vscode": "^1.28.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.toggleSpec",
        "onCommand:extension.runSpec"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.toggleSpec",
                "title": "Toggle Spec"
            },
            {
                "command": "extension.runSpec",
                "title": "Run Spec"
            }
        ],
        "keybindings": [
            {
                "mac": "cmd+9",
                "key": "ctrl+9",
                "command": "extension.toggleSpec"
            },
            {
                "mac": "cmd+0",
                "key": "ctrl+0",
                "command": "extension.runSpec"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Quick RSpec",
            "properties": {
                "quickRspec.commandPrefix": {
                    "type": "string",
                    "default": "bundle exec rspec",
                    "description": "command prefix to execute rspec"
                }
            }
        }
    },
    "scripts": {
        "test": "node ./test/runTest.js"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.1",
        "@types/node": "^8.10.25",
        "@types/vscode": "^1.76.0",
        "@vscode/test-electron": "^2.3.0",
        "mocha": "^10.8.2"
    }
}
